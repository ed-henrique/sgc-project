$black = #131515ff
$dark-green = #339989ff
$light-green = #7de2d1ff

main
    min-height calc(100vh - 150px)

.card > img
    height 500px
    object-fit cover
    vertical-align middle

td > img
    width 50px
    height 50px
    border-radius 50%
    object-fit cover
    vertical-align middle

.form-check-input
    background-color $black

.progress-bar
    background-color $dark-green

.form-check-input:checked
    background-color $light-green
    border-color $light-green
