extends layout

block head

block content
  main(class="container d-flex align-items-center justify-content-center")
    table.table.table-striped.w-75
      thead
        tr
          th.col Course Name
          th.col Code
          th.col.text-center Actions
      tbody
        if certificates.length === 0
          tr
            td(class="col text-center" colspan="3") No certificates found
        else
          each certificate in certificates
            tr(class="align-middle")
              td #{certificate.Course.name}
              td #{certificate.code}
              td
                .d-flex.justify-content-center
                  form(action=`/certificates/emit/${certificate.id}`, method="POST")
                    button(type="submit", class=`btn btn-dark btn-sm`)
                      i.bx.bx-download